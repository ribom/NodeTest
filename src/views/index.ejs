<% include master/siteHeader %>
    <!-- Half Page Image Background Carousel Header -->
    <header id="myCarousel" class="carousel slide" ng-controller="movieSearchCtrl">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li ng-repeat="(key, movie) in movieArray" data-target="#myCarousel" data-slide-to="{{key}}" class="{{key === 0 ? 'active' : ''}}"></li>
        </ol>
        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div ng-repeat="(key, movie) in movieArray" class="item {{key === 0 ? 'active' : ''}}">
                <div class="fill" style="background-image:url('{{baseImgUrl + bigSize + (movie.backdrop_path !== null ? movie.backdrop_path : movie.poster_path)}}');"> </div>
                <div class="carousel-caption">
                    <h2>{{movie.title}}</h2> </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev"> <span class="icon-prev"></span> </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next"> <span class="icon-next"></span> </a>
    </header>
    <!-- Page Content -->
    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>
    <!-- /.container -->
    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        })

    </script>
    <% include master/siteFooter %>
