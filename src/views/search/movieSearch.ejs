<% include ../master/siteHeader %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 padding-10">
                <div ng-controller="searchCtrl">
                    <input ng-model="term" type="text">
                    <button type="button" ng-click="search()">Search</button>

                    <div ng-repeat="(key, movie) in movieArray">
                        <div class="col-lg-12">
                            <img src="{{baseImgUrl + movie.poster_path}}">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
